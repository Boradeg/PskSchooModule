<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_expert_card5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_card_homework"
        android:elevation="13dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_below="@id/lay2"
            android:layout_marginHorizontal="20dp"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#DEEFF4"
            android:layout_height="70dp"
            android:layout_marginVertical="10dp">

            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_total_student_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_bold"
                        android:text="20"
                        android:textColor="@color/start_color"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_total_student_item"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Total"
                        android:textColor="@color/black10"
                        android:textSize="@dimen/_10sdp" />



                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_total_present_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_bold"
                        android:text="18"
                        android:textColor="@color/start_color"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_total_present_item"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Present"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black10" />



                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_total_absent_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_bold"
                        android:text="20"
                        android:textColor="@color/start_color"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_total_absent_item"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Absent"
                        android:textColor="@color/black10"
                        android:textSize="@dimen/_10sdp" />



                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_total_not_available_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_bold"
                        android:text="1"
                        android:textColor="@color/start_color"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_total_not_available_item"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_medium"
                        android:text="NA"
                        android:textColor="@color/black10"
                        android:textSize="@dimen/_10sdp" />



                </RelativeLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="25dp"
            android:id="@+id/rel11"
            android:layout_marginTop="10dp"
            >


            <ImageView
                android:id="@+id/person_img2"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:src="@drawable/standard"
                />
            <TextView
                android:id="@+id/tv_attendance_std"
                android:layout_width="130dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:padding="4dp"
                android:text="Standard : 4th"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/person_img2"
                android:textColor="@color/black10"
                android:textSize="@dimen/_8sdp" />
            <ImageView
                android:id="@+id/notice_date_img2"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_toRightOf="@id/view3"
                android:layout_centerVertical="true"
                android:src="@drawable/document"
                />
            <View
                android:id="@+id/view3"
                android:layout_width="1dp"
                android:background="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_height="100dp"
                />
            <TextView
                android:id="@+id/tv_attendance_div"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:padding="4dp"
                android:text="Division : A"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/notice_date_img2"
                android:textColor="@color/black10"
                android:textSize="@dimen/_8sdp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/lay2"
            android:layout_below="@id/rel11"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="25dp"
            >


            <ImageView
                android:id="@+id/person_img"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:src="@drawable/teacher"
                />
            <TextView
                android:id="@+id/tv_attendance_teacher_name"
                android:layout_width="130dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Sagar More"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/person_img"
                android:textColor="@color/black10"
                android:textSize="@dimen/_8sdp" />
            <ImageView
                android:id="@+id/notice_date_img"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_toRightOf="@id/view2"
                android:layout_centerVertical="true"
                android:src="@drawable/schedule"
                />
            <View
                android:id="@+id/view2"
                android:layout_width="1dp"
                android:background="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_height="100dp"
                />
            <TextView
                android:id="@+id/tv_attendance_date"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:padding="4dp"
                android:text="Date : 04/20/2024"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/notice_date_img"
                android:textColor="@color/black10"
                android:textSize="@dimen/_8sdp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>