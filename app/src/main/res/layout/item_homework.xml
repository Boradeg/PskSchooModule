<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_expert_card5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_card_homework"
        android:elevation="13dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingVertical="5dp"
            android:id="@+id/rel1"
            android:background="@drawable/background_card_homework2">
            <TextView
                android:id="@+id/tv_subject_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:padding="4dp"
                android:layout_centerVertical="true"
                android:text="Science (204)"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tv_homework_desc_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/rel1">
            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:background="@color/white"
                android:layout_height="50dp"
                android:layout_marginStart="160dp"
                />




            <TextView
                android:id="@+id/tv_noticeboard_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="10dp"
                android:padding="4dp"
                android:text="Note : Please submit homework before last date"
                android:textColor="@color/black10"
                android:textSize="@dimen/_10sdp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="15dp"
                android:layout_below="@id/tv_noticeboard_desc"
                android:layout_centerVertical="true"
                >


                <ImageView
                    android:id="@+id/person_img"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user"
                    />
                <TextView
                    android:id="@+id/tv_noticeboard_user_name"
                    android:layout_width="130dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="4dp"
                    android:textAllCaps="false"
                    android:text="Mr.Sagar Moresdfghjk "
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/person_img"
                    android:textColor="@color/black10"
                    android:textSize="@dimen/_8sdp" />
                <ImageView
                    android:id="@+id/notice_date_img"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_toRightOf="@id/view2"
                    android:layout_centerVertical="true"
                    android:src="@drawable/calendar"
                    />
                <View
                    android:id="@+id/view2"
                    android:layout_width="1dp"
                    android:background="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_height="100dp"
                    />
                <TextView
                    android:id="@+id/tv_noticeboard_date"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="4dp"
                    android:text="04/20/2024"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/notice_date_img"
                    android:textColor="@color/black10"
                    android:textSize="@dimen/_8sdp" />
            </RelativeLayout>
        </RelativeLayout>




    </RelativeLayout>

</RelativeLayout>